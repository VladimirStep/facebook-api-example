<header>
  <nav class="navbar navbar-default">
    <div class="container">
      <div class="navbar-header">
        <%= link_to 'FACEBOOK API', root_path, class: 'navbar-brand' %>
      </div>
      <ul class="nav navbar-nav navbar-right">
        <% if @user %>
          <li class="user-header-icon" style="background-image: url(<%= @user['picture']['data']['url'] %>)"></li>
          <li><p class="navbar-text"><%= @user['name'] %></p></li>
          <li><%= link_to 'Logout', logout_path %></li>
        <% else @user %>
          <li><%= link_to 'Login', '/auth/facebook' %></li>
        <% end %>
      </ul>
    </div>
  </nav>
</header>
